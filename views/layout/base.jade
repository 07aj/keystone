doctype 5
html
	head
		meta(charset="utf-8")
		title Prospekt
		link(rel="stylesheet", href="/prospekt/styles/prospekt.css")
		//link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Lato:300,400,700")
		block css
		
		//- IE hacks (uncomment if required)
		//-	//if lt IE 10
		//-		link(rel="stylesheet", href="/styles/ie-min.css", media="all")
		
		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
		block head
	body
		.fb-root
		
		#header(data-spy="affix", data-offset-top="1"): .container
			a(href='/prospekt', class=(section == 'home' ? 'selected' : null)).brand= brand
			each list in lists
				a(href='/prospekt/' + list.path, class=(section == list.key ? 'selected' : null))= list.label
		
		#body: .container
			if messages
				#flash-messages
					each message in messages.info
						.alert.alert-info= message
					each message in messages.success
						.alert.alert-success= message
					each message in messages.warning
						.alert= message
					each message in messages.error
						.alert.alert-error= message
			block content
		
		#footer: .container
			| Prospekt copyright &copy; #{new Date().getFullYear()} #{copyright}. All rights reserved.
		
		script(src="/prospekt/js/lib/underscore/underscore-1.4.4.min.js")
		script(src="/prospekt/js/lib/jquery/jquery-1.9.1.min.js")
		script(src="/prospekt/js/lib/moment/moment-1.7.2.min.js")
		
		link(rel="stylesheet", href="/prospekt/js/lib/select2/select2-3.3.2.css")
		link(rel="stylesheet", href="/prospekt/js/lib/select2/theme.css")
		script(src="/prospekt/js/lib/select2/select2-3.3.2.js")
		
		link(rel="stylesheet", href="/prospekt/js/lib/pikaday/pikaday-1.1.0.css")
		script(src="/prospekt/js/lib/pikaday/pikaday-1.1.0.js")
		script(src="/prospekt/js/lib/pikaday/pikaday.jquery-1.1.0.js")
		
		script(src="/prospekt/js/common/ui.js")
		
		//- Page Scripts
		block page-js