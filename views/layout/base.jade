doctype 5
html
	head
		meta(charset="utf-8")
		title= title
		link(rel="stylesheet", href="/keystone/styles/keystone.css")
		//link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Lato:300,400,700")
		block css
		
		//- IE hacks (uncomment if required)
		//-	//if lt IE 10
		//-		link(rel="stylesheet", href="/styles/ie-min.css", media="all")
		
		link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
		block head
	body
		.fb-root
		
		#header(data-spy="affix", data-offset-top="1"): .container
			a(href='/keystone', class=(section == 'home' ? 'selected' : null)).brand= brand
			each list in lists
				a(href='/keystone/' + list.path, class=(section == list.key ? 'selected' : null))= list.label
			if signout
				a(href=signout).signout Sign Out
		
		#body: .container
			if messages
				#flash-messages
					each message in messages.info
						.alert.alert-info= message
					each message in messages.success
						.alert.alert-success= message
					each message in messages.warning
						.alert= message
					each message in messages.error
						.alert.alert-error= message
			block content
		
		#footer: .container
			| Powered by 
			a(href='http://github.com/JedWatson/keystone', target='_blank') Keystone
			| .
		
		script(src="/keystone/js/lib/underscore/underscore-1.4.4.min.js")
		script(src="/keystone/js/lib/jquery/jquery-1.9.1.min.js")
		script(src="/keystone/js/lib/moment/moment-1.7.2.min.js")
		script(src="/keystone/js/lib/move/move-0.1.1.min.js")
		
		link(rel="stylesheet", href="/keystone/js/lib/select2/select2-3.3.2.css")
		link(rel="stylesheet", href="/keystone/js/lib/select2/theme.css")
		script(src="/keystone/js/lib/select2/select2-3.3.2.js")
		
		link(rel="stylesheet", href="/keystone/js/lib/pikaday/pikaday-1.1.0.css")
		script(src="/keystone/js/lib/pikaday/pikaday-1.1.0.js")
		script(src="/keystone/js/lib/pikaday/pikaday.jquery-1.1.0.js")
		
		script(src="/keystone/js/common/ui.js")
		script(src="/keystone/js/common/ui-alt-text.js")
		script(src="/keystone/js/common/ui-sortable.js")
		
		script.
			Keystone = {};
		
		//- Page Scripts
		block page-js